<%# Step 1: remove the form from the Quotes#index page %>
<%= turbo_stream.update LineItemDate.new, "" %>
<%# Step 2: add the date at the right place %>
<% if previous_date = @line_item_date.previous_date %>
  <%= turbo_stream.after previous_date, partial: @line_item_date, locals: {quote: @quote} %>
<% else %>
  <%= turbo_stream.prepend "line_item_dates", partial: @line_item_date, locals: {quote: @quote} %>
<% end %>
<%# Step 3: render flash msg %>
<%= render_turbo_stream_flash_messages %>
